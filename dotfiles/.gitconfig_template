[user]
	email = <email>
	name = <fullname>
[core]
	autocrlf = false
	safecrlf = false
	;Sets a global ignore file.
	excludesfile = /home/<username>/.gitignore_global
	editor = vim
[help]
	autocorrect = 1
[color]
	ui = always
[http]
	;sslVerify = false
[alias]
	h = log --oneline --all --decorate
	dh = log --pretty=format:'%C(yellow)%h %Cred%ad %Creset%an%Cgreen%d %Creset%s' --date=short
	dht = log --no-walk --tags --pretty='%C(yellow)%h %Cred%ad %Creset%an%Cgreen%d %Creset%s' --decorate=full --date=short
	g = log --oneline --all --decorate --graph
	c = show --name-status --oneline -r
	dt = difftool
	d = diff
	fh = show --pretty= --name-only
[push]
	default = simple
[merge]
	tool = vimdiff
[mergetool]
    prompt=true
[diff]
    tool=vimdiff
[difftool]
    prompt=true
[pager]
    diff = false
